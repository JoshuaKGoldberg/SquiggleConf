---
import AboutUs from "~/components/AboutUs.astro";
import BaseLayout from "~/layouts/BaseLayout.astro";
import Calls from "~/components/Calls.astro";
import Information from "~/components/Information.astro";
import PrimaryHero from "~/components/PrimaryHero.astro";
import SpeakersContent from "~/components/SpeakersContent.astro";
import PrimaryContents from "~/components/PrimaryContents.astro";
import BodyText from "~/components/BodyText.astro";
---

<BaseLayout>
	<PrimaryHero />
	<PrimaryContents>
		<div class="contents">
			<Information />
			<SpeakersContent>
				<BodyText size="large" width="lean">
					See more on <a href="/speakers">Speakers</a>.

					<br />
					<br />

					You’ll emerge with the best techniques to supercharge your projects —
					whether you’re already a tooling wizard or trying to become one.
				</BodyText>
			</SpeakersContent>
			<Calls class="half" />
			<AboutUs />
		</div>
	</PrimaryContents>
</BaseLayout>

<style>
	.contents {
		align-items: center;
		display: flex;
		gap: 7rem;
		flex-direction: column;
	}
</style>
