---
import { Image } from "astro:assets";

import { partners } from "~/data";

import Heading from "./Heading.astro";
import SquiggleFlanked from "./SquiggleFlanked.astro";
import FullSection from "./FullSection.astro";
import AnchorButton from "./AnchorButton.astro";
import BodyText from "./BodyText.astro";
---

<FullSection>
	<SquiggleFlanked class="squiggle-flanked" width="lean">
		<Heading class="heading" id="partners" level="h2" link>Partners</Heading>
	</SquiggleFlanked>
	<BodyText size="large" width="lean">
		Our partners are lovely friends in the industry who also work to push the
		state of web dev tooling forward.
	</BodyText>

	<div class="partners">
		{
			partners.map((partner) => (
				<a href={partner.href} rel="noreferrer" target="_blank">
					<Image alt="" src={partner.logo} height={128} />
				</a>
			))
		}
	</div>
</FullSection>

<style>
	.squiggle-flanked {
		margin-bottom: 3rem;
	}

	.heading {
		font-size: var(--fontSizeH2);
	}

	.partners {
		align-items: center;
		display: flex;
		flex-direction: column;
		padding: 2rem 2rem 4rem;
		justify-content: center;
		margin: auto;
	}

	.partners img {
		/* max-width: 14rem; */
	}

	@media (min-width: 819px) {
		.partners {
			flex-direction: row;
			gap: 4rem;
		}

		.partners a {
			padding: 1.5rem 3.5rem;
		}
	}
</style>
