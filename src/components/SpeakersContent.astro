---
import Heading from "./Heading.astro";
import SquiggleFlanked from "./SquiggleFlanked.astro";

import danVanderkam from "~/assets/dan-vanderkam.jpg";
import rizelScarlett from "~/assets/rizel-scarlett.png";
import titianCernicovaDragomir from "~/assets/titian-cernicova-dragomir.jpg";
import FullSection from "./FullSection.astro";
import Speaker, { Props as BioProps } from "./Bio.astro";
import BodyText from "./BodyText.astro";
import SpeakersList from "./SpeakersList.astro";
import SpeakersArea from "./SpeakersArea.astro";

const speakers: Omit<BioProps, "size">[] = [
	{
		name: "Dan Vanderkam",
		photo: danVanderkam,
		position: "Author, Effective TypeScript",
		links: {
			github: "danvk",
			twitter: "danvdk",
			website: "https://www.danvk.org",
		},
	},
	{
		name: "Riz√®l Scarlett",
		photo: rizelScarlett,
		position: "Staff Developer Advocate, TBD",
		links: {
			github: "blackgirlbytes",
			linkedin: "https://linkedin.com/in/rizel-bobb-semple",
			twitter: "blackgirlbytes",
		},
	},
	{
		name: "Titian Cernicova-Dragomir",
		photo: titianCernicovaDragomir,
		position: "Software Engineer, Bloomberg",
		links: {
			github: "dragomirtitian",
			linkedin: "https://linkedin.com/in/titian-cernicova-dragomir-2b37457a",
			twitter: "titiancernicova",
		},
	},
] as const;
---

<FullSection>
	<SquiggleFlanked class="squiggle-flanked" width="lean">
		<Heading class="heading" id="speakers" level="h2" link>Speakers</Heading>
	</SquiggleFlanked>

	<BodyText size="large" width="lean">
		Meet the developers around the Go, TypeScript, Rust, and Zig tools that make
		the squiggles you depend on every day.
	</BodyText>

	<br />

	<SpeakersArea>
		<SpeakersList>
			{speakers.map((speaker) => <Speaker {...speaker} size="large" />)}
		</SpeakersList>

		<slot />
	</SpeakersArea>
</FullSection>

<style>
	.squiggle-flanked {
		margin-bottom: 3rem;
	}

	.heading {
		font-size: var(--fontSizeH2);
	}
</style>
