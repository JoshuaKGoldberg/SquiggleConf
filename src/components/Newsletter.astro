---
interface Props {
	class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<form class:list={["newsletter", className]} {...rest}>
	<label
		>Enter your email for deadlines, announcements, and other great SquiggleConf
		news.</label
	>
	<input type="email" placeholder="you.are@awesome.com" />
	<button type="submit">Subscribe</button>
</form>

<style>
	.newsletter {
		align-items: center;
		display: grid;
		font-family: var(--fontFamilyBody);
		font-size: var(--fontSizeBody);
		font-weight: var(--fontWeightBody);
		gap: 1rem;
		grid-column-gap: 1rem;
		grid-row-gap: 0.5rem;
		grid-template-columns: repeat(2, auto);
		grid-template-rows: repeat(2, auto);
		margin: auto;
		padding: 0 2rem;
	}

	label {
		grid-area: 1 / 1 / 2 / 2;
	}

	button {
		grid-area: 1 / 2 / 2 / 3;
	}

	input {
		grid-area: 2 / 1 / 3 / 3;
	}

	label {
		max-width: 20rem;
	}

	button {
		background: #49aaca;
		border-radius: 1rem;
		border: none;
		font-family: var(--fontFamilyHeading);
		font-weight: 700;
		font-size: var(--fontSizeBodyLarge);
		text-decoration: none;
		color: var(--colorInverted);
		padding: 1rem 2rem;
	}

	input {
		border-radius: 0.5rem;
		padding: 0.5rem 0.75rem;
		border: 1px solid #117799;
	}
</style>
