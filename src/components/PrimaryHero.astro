---
import AnchorButton from "./AnchorButton.astro";
import Hero from "./Hero.astro";
import HeroName from "./HeroName.astro";
---

<Hero shifted>
	<HeroName align="center" color="inverted" level="h1" />
	<AnchorButton
		href="https://buytickets.at/squiggleconf/1249793/r/website"
		target="_blank"
		rel="noreferrer"
	>
		$350 Early Bird Tickets
	</AnchorButton>
	<aside class="aside">$450 tickets on July 1st</aside>
</Hero>

<style>
	.aside {
		color: #cae6ff;
		font-size: var(--fontSizeBodySmall);
		font-family: var(--fontFamilyHeading);
		font-weight: 200;
		padding: 0;
		margin-top: -1rem;
	}
</style>
