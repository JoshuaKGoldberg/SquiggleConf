---
interface Props {
	class?: string;
	id?: string;
	level: "h1" | "h2" | "h3";
}

const { level: As, ...rest } = Astro.props;
---

<As class:list={[Astro.props.class, "heading"]} {...rest}><slot /></As>

<style>
	.heading {
		font-family: var(--fontFamilyHeading);
		letter-spacing: var(--letterSpacingHeading);
		scroll-margin-top: 2rem;
	}
</style>
