---
interface Props {
	class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<div class:list={["primary-contents", Astro.props.class]} {...rest}>
	<slot />
</div>

<style>
	.primary-contents {
		align-items: center;
		display: flex;
		flex-direction: column;
		padding: clamp(2.5rem, 10vw, 5rem) 0 7.5rem;
	}
</style>
